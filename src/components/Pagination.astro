---
import IconButton from "./IconButton.astro";
import ArrowLeft from "../icons/ArrowLeft.astro";
import ArrowRight from "../icons/ArrowRight.astro";

const { page, class: className } = Astro.props;
---

<nav
  aria-label="Pagination"
  class:list={[
    "p-4 flex items-center sm:justify-center gap-8 min-w-full",
    className,
  ]}
>
  <IconButton
    class="disabled:hover:cursor-not-allowed"
    style="--disabled-color: var(--color-ash-gray);"
    href={page.url.prev}
    aria-label={`Go to page ${page.currentPage - 1} of ${page.lastPage}`}
    disabled={!page.url.prev}
  >
    <ArrowLeft class="w-5 h-5 fill-current" />
  </IconButton>
  <span class="text-sm" aria-current="page"
    >Page {page.currentPage} of {page.lastPage}</span
  >
  <IconButton
    class="disabled:hover:cursor-not-allowed"
    style="--disabled-color: var(--color-ash-gray);"
    href={page.url.next}
    aria-label={`Go to page ${page.currentPage + 1} of ${page.lastPage}`}
    disabled={!page.url.next}
  >
    <ArrowRight class="w-5 h-5 fill-current" />
  </IconButton>

  <style>
    :global(.disabled) {
      fill: var(--disabled-color);
      color: var(--disabled-color);
    }
    :global(.disabled:hover) {
      color: var(--disabled-color) !important;
    }
  </style>
</nav>
